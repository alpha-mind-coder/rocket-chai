<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Scan to Pay</title>
  <link rel="stylesheet" href="/scan.css" />
</head>
<body>
  <div class="scanner-box">
    <div class="scanner-content">
      <a href="/" class="close-btn">âœ–</a>
      <h2>Please enter your details to confirm the order</h2>

      <!-- Form submission uses session cart -->
      <form id="customer-form" method="POST" action="/submit-order" enctype="multipart/form-data">
        <input type="text" id="name" name="name" placeholder="Name" required />
        <input type="text" id="studentid" name="student_id" placeholder="Student ID" required />
        <input type="text" id="contact" name="phone" placeholder="Contact No." required />
        <input type="email" id="email" name="email" placeholder="Email ID" required />

        <div class="img-wrapper">
          <img class="qr-image" src="/images/qr_image.png" alt="QR Code" />
          <h3 class="total" >Your Total is : â‚¹ <%= total %></h3>
          <h3 class="upi-id">UPI ID: Q564743460@ybl</h3>
        </div>  

        <div class="payment-verify">
          <div class="upi-id-group">
            <label for="upi-id-input">Enter your UPI ID:</label>
            <input
              type="text"
              id="upi-id-input"
              name="upi_id"
              placeholder="X000000000@abc"
              required
              maxlength="20"
              minlength="6"
            />
          </div>

          <div class="screenshot-group">
            <label for="payment-screenshot">Upload Payment Screenshot:</label>
            <div class="custom-file-input">
              <input
                type="file"
                id="payment-screenshot"
                name="payment_screenshot"
                accept="image/*"
                required
              />
            </div>
          </div>  
        </div>

        <br />
        <button type="submit">Click to place order after payment</button>
      </form>
    </div>
  </div>

 <script>
  const customerForm = document.getElementById("customer-form");
  const submitBtn = customerForm.querySelector('button[type="submit"]');

  let isSubmitting = false;

  customerForm.addEventListener("submit", async (e) => {
    e.preventDefault();

    // ğŸ”’ Prevent double submission
    if (isSubmitting) return;
    isSubmitting = true;

    // ğŸ•’ Disable button & show loading text
    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.innerText = "Submitting...";
    }

    const formData = new FormData(customerForm);

    try {
      const response = await fetch("/submit-order", {
        method: "POST",
        body: formData,
        credentials: "include",
      });

      const data = await response.json();

      if (data.success) {
        alert("âœ… Order confirmed! Cart cleared.");
        window.location.href = "/";
      } else {
        alert("âŒ " + (data.message || "Payment screenshot required"));
      }
    } catch (err) {
      console.error(err);
      alert("âŒ Network error, please try again.");
    } finally {
      // ğŸŸ¢ Re-enable only if failed (not on success)
      if (!data?.success && submitBtn) {
        submitBtn.disabled = false;
        submitBtn.innerText = "Submit Order";
      }
      isSubmitting = false;
    }
  });
</script>

</body>
</html>
